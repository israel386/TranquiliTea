<div> You are on the homepage </div>

<ol class="affirmation-box">
  {{#each affirmations as |affirmation|}}
  <li>
    <article class="affirmations">
      <!-- affirmation --> 
      <div class="title">
       {{affirmation_phrase}}  
        
      </div>
      
    </article>
  </li>
  {{/each}}
</ol>


<ol class="quote-box">
  {{#each quotes}}
  <li>
    <article class="quotes">
      <!-- quotes --> 
      <div class="title">
       {{quote}} - by {{by}}
      </div>
      
    </article>
  </li>
  {{/each}}
</ol>

<ol class="teas-box">
  {{#each teas}}
  <li>
    <article class="teas">
      <!-- teas --> 
      <div class="title">
       {{tea_type}} - benefits {{benefits}}
      </div>
      
    </article>
  </li>
  {{/each}}
</ol>

<form class="comment-form">
  <div>
    <textarea name="entry-body"></textarea>
  </div>

  <div>
    <button type="submit">add entry</button>
    <button type="submit">edit entry</button>
    <button type="submit">delete entry</button>

  </div>
</form>

<div class="comments">
  {{#each post.entries}}
  <section class="comment">
    <div class="meta">

      Entered on {{created_at}}
    </div>
    <div class="text">
      {{entry_text}}
    </div>
  </section>
  {{/each}}
</div>

<script src="/public/javascript/entry.js"></script>
